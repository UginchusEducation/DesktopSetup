pipeline {
    agent { 
        node {
            label 'docker-agent-apline'
        }
    }
    options {
      buildDiscarder(logRotator(numToKeepStr: '5')) 
      durabilityHint('PERFORMANCE_OPTIMIZED') 
      disableConcurrentBuilds()
    }
    stages {
        stage('Copy files') {
            steps {
                echo "Building..."
                sh '''
                echo "doing build stuff.."
                '''
            }
        }
        stage('Checkout') {
            steps {
                echo "Testing..."
                dir('build') {
                    checkout scmGit(
                        branches: [[name: '*/main']], 
                        extensions: [cloneOption(depth: 1, noTags: true, reference: '', shallow: true, timeout: 200)], 
                        userRemoteConfigs: [[credentialsId: 'jenkins-roguelike-source', url: 'https://github.com/UginchusEducation/DesktopSetup.git']])
                sh '''
                echo "doing test stuff.."
                cd build
                ls
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver...'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
    post {
        always {
            archiveArtifacts(artifacts: '',  followSymlinks: false)
        }
    }
}